{% extends 'base.html.twig' %}

{% block title %}Liste des Abonn√©s
{% endblock %}

{% block body %}
	<h1>User index</h1>

	<div class="container">
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Roles</th>
					<th>Firstname</th>
					<th>Lastname</th>
					<th>Image</th>
					<th>IsVerified</th>
					<th>Role</th>
					<th>Location</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						
						<td>{{ user.firstname }}</td>
						<td>{{ user.lastname }}</td>
						 </tr>
                        {% if user.image != null %}            
                        <tr>
                         <td> <img class="picture" src="/image/uploads/{{user.image}}" alt="image de {{ user.firstname }}"></td>
                        </tr>
                        {% endif %}
						<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
						<td>{{ user.role }}</td>
						<td>{{ user.location }}</td>
						<td>
							<a class="btn btn-primary mb-3" href="{{ path ('admin_user_show', {'id': user.id}) }}">show</a>
							|
							<a class="btn btn-primary mb-3" href="{{ path ('admin_user_edit', {'id': user.id}) }}">edit</a>
						</td>
					</tr>
				</div>
			{% else %}
				<tr>
					<td colspan="11">no records found</td>
				</tr>
			{% endfor %}
		</table>
	   </tbody>
    </div>


<a class="btn btn-primary mb-3" href="{{ path('user_new') }}">Create new</a>
{% endblock %}
