{% extends 'base.html.twig' %}

{% block title %}Categorie index
{% endblock %}

{% block body %}
	<h1>Categorie index</h1>
	<div class="container">
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for categorie in categories %}
					<tr>
						<td>{{ categorie.id }}</td>
						<td>{{ categorie.name }}</td>
						
						
						<td>
							<a class="btn btn-primary " href="{{ path('categorie_show', {'id': categorie.id}) }}">show</a>
                            |
							<a class="btn btn-primary" href="{{ path('categorie_edit', {'id': categorie.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a class="btn btn-primary mt-3 mb-5" href="{{ path('categorie_new') }}">Ajouter</a>
		|
		<a class="btn btn-primary mt-3 mb-5" href="{{ path('admin_user_index') }}">retour</a>
	</div>
{% endblock %}
