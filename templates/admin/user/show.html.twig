{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="text-white">User</h1>
		<table class="rounded card p-4 bg-light text-dark ">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
                <tr>
					<th>Image:</th>
					<td>{{ user.image }}</td>
				</tr>
                <tr>
					<th>Firstname:</th>
					<td>{{ user.firstname }}</td>
				</tr>
				<tr>
					<th>Lastname:</th>
					<td>{{ user.lastname }}</td>
				</tr>
				<tr>
					<th>Email:</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles:</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Password:</th>
					<td>{{ user.password }}</td>
				</tr>
				
				
				<tr>
					<th>IsVerified:</th>
					<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
				</tr>
				<tr>
					<th>Role:</th>
					<td>{{ user.role }}</td>
				</tr>
				<tr>
					<th>Location:</th>
					<td>{{ user.location }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-primary mt-3 rounded-pill" href="{{ path ('admin_user_index') }}">back to list</a>

		<a class="btn btn-warning mt-3 ms-3 rounded-pill" href="{{ path ('admin_user_edit', {'id': user.id}) }}">edit</a>

		{{ include('admin/user/_delete_form.html.twig') }}
	</div>
{% endblock %}
