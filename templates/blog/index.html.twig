{% extends 'base.html.twig' %}


{% block title%}Articles
{% endblock %}

{% block body %}
	<div class="container">
	<div class="blog p-3 mt-5">
	<h1><strong>PALABRES</strong></h1>
	</div>
		<div class="row">
			{% for post in posts %}
				<div class="col-md-4">
					<div class="card mt-5 ">
						<img src="https://picsum.photos/150.jpg" class="card-img-top" alt="image">
						<div class="card-body">
							<h2 class="card-title">{{ post.title}}</h2>
							<p class="card-text">{{ post.content}}</p>
							<p>
								{{ post.author}}
								-
								{{ post.createdAt|date("d/m/y")}}
							</p>
						</div>
						<a class="btn btn-warning mt-2" href="/posts/{{ post.id }}">Lire l'article</a>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="d-flex justify-content-center">
			<a href="{{path('home')}}" class="btn btn-primary mb-2 ">Accueil</a>
		</div>
	</div>
{% endblock %}
