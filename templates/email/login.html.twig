{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as{{ app.user.username }},
            <a href="{{ path('app_login') }}">Log in</a>
        </div>
    {% endif %}

    <h1 class=" mb-3 font-weight-normal">Please log in</h1>
    <label for="email">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="Password">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control mt-2 " autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">    
        <div class="checkbox mt-2 mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    
    <button class=" btn btn-primary me-3 mt-3" type="submit">log in</button>
</form>
{% endblock %}
