{% extends 'base.html.twig' %}

{% block title %}Hello PostPublicController!{% endblock %}

{% block body %}
<div class="container bg-secondary ">
	<div class="blog p-3 mt-5 text-light">
	<h1><strong>PALABRES et conseils</strong></h1>
	</div>
		<div class="row">
			{% for post in posts %}
				<div class="col-md-6 gy-2">
					<div class="card mt-5 "style"width:10rems;">
						<img src="https://media.istockphoto.com/photos/upcoming-events-text-message-bubble-concept-wooden-background-picture-id1348886734?b=1&k=20&m=1348886734&s=170667a&w=0&h=WkFmNDrYT7yo6pDSW_44Wo09YzfvLW1UDvHFJ78kPxI=" class=" rounded card-img-top" alt="image">
						<div class="card-body">
							<h2 class="card-title">{{ post.title}}</h2>
							<p class="card-text">{{ post.content}}</p>
							<p>
								{{ post.author}}
								-
								{{ post.createdAt|date("d/m/y")}}
							</p>
						</div>
						<a class="btn btn-warning mt-2" href="/posts/{{ post.id }}">Lire l'article</a>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="d-flex justify-content-end mt-4">
			<a href="{{path('home')}}" class="btn btn-danger mt-5 mb-3 rounded-pill mb-2 ">Accueil</a>
		</div>
	</div>

{% endblock %}
